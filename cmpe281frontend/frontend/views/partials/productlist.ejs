<!-- views/partials/productlist.ejs -->
<!-- productlist
 ================================================== -->
<% if (typeof MemberInfo != 'undefined') { %>
<div id="userId" class="hidden" uid="<%= MemberInfo._id%>"></div>
<% } %>
<% for(var i=0; i< movies.length; i++) { %>
    <% if (i % 3 ==  0) { %>
    <div class="row">
    <% } %>
        <div class="col-md-4">
            <div class="thumbnail">
                <a href=<%= "/movie/"+movies[i]._id %>><img src=<%= movies[i].image %> alt="..."></a>
                <div class="caption">
                    <h3><a href="/movie"><%= movies[i].title %></a></h3>
                    <p>$<%= movies[i].price %></p>
                    <button id="addToCart" mid="<%= movies[i]._id %>" class="btn btn-primary" role="button" onclick=myFunction() >add to cart
                    </button>
                </div>
            </div>
        </div>
    <% if ((i+1) % 3 ==  0) { %>
    </div>
    <% } %>
<% } %>
<!--/.productlist-->
